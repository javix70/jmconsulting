---
import { Icon } from "astro-icon";
---

<section id="services" class="md:h-5/6 sm:h-screen container mx-auto">
  <div class="grid sm:grid-cols-1 md:grid-cols-2 justify-items-center py-8">
    <div class="md:col-start-2 col-span">
      <h2 class='text-3xl font-bold'>Servicios</h2>
    </div>
  </div>
  <div class="grid sm:grid-cols-1 md:grid-cols-2 md:gap-y-32 gap-y-8 gap-x-4 place-items-center max-h-max pb-5">

    <div class="sm:h-24 sm:w-3/5 md:h-40 w-4/5 rounded-2xl flex justify-center items-center overflow-hidden shadow-lg bg-opal">
      <div class="flex px-6 py-4 justify-center items-center">
        <Icon name="asesoriaslogo" size="20%" class="mr-5"/>
        <h3 class="font-bold text-xl mb-2">Asesorias</h3>
      </div>
    </div>
    <div class="sm:h-24 sm:w-3/5 md:h-40 w-4/5 rounded-2xl flex justify-center items-center overflow-hidden shadow-lg bg-opal">
      <div class="flex px-6 py-4 justify-center items-center">
        <Icon name="declaraciones" size="20%" class="mr-5"/>
        <h3 class="font-bold text-xl mb-2">Declaraciones</h3>
      </div>
    </div>
    <div class="sm:h-24 sm:w-3/5 md:h-40 w-4/5 rounded-2xl flex justify-center items-center overflow-hidden shadow-lg bg-opal">
      <div class="flex px-6 py-4 justify-center items-center">
        <Icon name="contabilidad" size="20%" class="mr-5"/>
        <h3 class="font-bold text-xl mb-2">Contabilidad</h3>
      </div>
    </div>
    <div class="sm:h-24 sm:w-3/5 md:h-40 w-4/5 rounded-2xl flex justify-center items-center overflow-hidden shadow-lg bg-opal">
      <div class="flex px-6 py-4 justify-center items-center">
        <Icon name="sii" size="20%" class="mr-5"/>
        <h3 class="font-bold text-xl mb-2">Tramites SII</h3>
      </div>
    </div>
    
  </div>
</section>