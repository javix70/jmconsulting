---
export interface Props {
  company: string;
  legal_representative: string;
  description: string;
}

const {company, legal_representative, description } = Astro.props;
---


<div class="max-w-sm sm:w-full rounded-2xl overflow-hidden shadow-lg bg-opal md:w-4/6 h-3/4">
  <div class="px-6 py-4">
    <h3 class="font-bold text-xl mb-2">{company}</h3>
    <h2 class="font-bold text-xl mb-2">{legal_representative}</h2>
    <p class="text-gray-700 text-base">
     {description}
    </p>
  </div>
</div>
